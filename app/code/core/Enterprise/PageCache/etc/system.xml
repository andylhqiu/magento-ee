<config>
    <sections>
        <system>
            <groups>
                <page_cache translate="label">
                    <label>Full Page Cache Settings</label>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <sort_order>600</sort_order>
                    <fields>
                        <allowed_depth translate="label">
                            <label>Max. Allowed Page Depth</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Page depth calculated based on page parameters count. (category.html - depth 0, category.html?p=2 - depth 1)</comment>
                        </allowed_depth>
                        <multicurrency translate="label">
                            <label>Enable Cache for Not Default Currencies</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </multicurrency>
                        <max_cache_size translate="label">
                            <label>Max. Cache Size (Mb)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </max_cache_size>
                        <debug translate="label">
                            <label>Enable Highlight on Dynamic Blocks While Generating</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>0</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </debug>
                    </fields>
                </page_cache>
                <page_crawl>
                    <label>Full Page Cache Auto Generation</label>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <sort_order>700</sort_order>
                    <fields>
                        <enable translate="label">
                            <label>Enable Page Cache Auto Generation</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <threads translate="label,comment">
                            <label>Crawler Thread Number</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Number of paralel requests for cache auto generation process.</comment>
                        </threads>
                        <multicurrency translate="label,comment">
                            <label>Generate Page Cache for Not Default Currencies</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Require enable cache for not default currencies.</comment>
                        </multicurrency>
                    </fields>
                </page_crawl>
            </groups>
        </system>
        <web>
            <groups>
                <cookie>
                    <fields>
                        <cookie_restriction translate="comment">
                            <comment>Note that to fully restrict cookies, full page caching must be disabled as well.</comment>
                        </cookie_restriction>
                    </fields>
                </cookie>
            </groups>
        </web>
    </sections>
</config>
