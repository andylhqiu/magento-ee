<mapping strict="0">
    <fields>
        <name>
            <selector>.//label[contains(.,"%product_name%")]/../preceding-sibling::input</selector>
            <strategy>xpath</strategy>
            <input>checkbox</input>
        </name>
        <qty>
            <selector>.//input[contains(@class, "qty")]</selector>
            <strategy>xpath</strategy>
        </qty>
    </fields>
</mapping>
