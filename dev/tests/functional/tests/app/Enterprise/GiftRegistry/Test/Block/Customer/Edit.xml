            <selector>[name="registry[number_of_guests]"]</selector>
        </number_of_guests>
        <baby_gender>
            <input>select</input>
            <selector>[name="registry[baby_gender]"]</selector>
        </baby_gender>
        <person_ids>
            <class>\Enterprise\GiftRegistry\Test\Block\Customer\Edit\Registrants</class>
            <selector>//div[*[contains(@id,"registrant_options")]]</selector>
            <strategy>xpath</strategy>
        </person_ids>
        <address>
            <class>\Enterprise\GiftRegistry\Test\Block\Customer\Edit\Address</class>
            <selector>//*[*[contains(@id,"shipping-new-address-form")]]</selector>
            <strategy>xpath</strategy>
        </address>
