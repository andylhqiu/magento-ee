    <fields>
        <title />
        <message>
            <input>textarea</input>
        </message>
        <is_public>
            <input>select</input>
        </is_public>
        <is_active>
            <input>select</input>
        </is_active>
        <event_country>
            <input>select</input>
        </event_country>
        <event_country_region>
            <input>select</input>
        </event_country_region>
        <event_date />
        <event_location />
