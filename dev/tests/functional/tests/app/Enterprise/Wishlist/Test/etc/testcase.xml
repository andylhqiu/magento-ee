<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../vendor/magento/mtf/Magento/Mtf/TestCase/etc/testcase.xsd">
    <scenario name="AddProductsToMultipleWishListTest" firstStep="setupConfiguration">
        <step name="setupConfiguration" module="Mage_Core" next="persistMultipleWishlist">
            <item name="configData" value="enable_multiple_wishlist" />
        </step>
        <step name="persistMultipleWishlist" module="Enterprise_Wishlist" next="createProducts" />
        <step name="createProducts" module="Mage_Catalog" next="loginCustomerOnFrontend" />
        <step name="loginCustomerOnFrontend" module="Mage_Customer" next="addProductsToMultipleWishlist" />
        <step name="addProductsToMultipleWishlist" module="Enterprise_Wishlist" />
    </scenario>
</config>
