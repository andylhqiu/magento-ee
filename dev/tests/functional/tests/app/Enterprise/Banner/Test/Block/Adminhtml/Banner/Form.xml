<tabs>
    <banner_properties>
        <class>\Mage\Adminhtml\Test\Block\Widget\Tab</class>
        <selector>#banner_info_tabs_properties_section</selector>
        <strategy>css selector</strategy>
        <fields>
            <is_enabled>
                <input>select</input>
            </is_enabled>
            <banner_properties_is_types>
                <selector>#banner_properties_is_types</selector>
                <input>select</input>
            </banner_properties_is_types>
            <types>
                <selector>#banner_properties_types</selector>
                <input>multiselect</input>
            </types>
            <use_customer_segment>
                <input>select</input>
            </use_customer_segment>
            <customer_segment>
                <selector>[name="customer_segment_ids[]"]</selector>
                <input>multiselect</input>
            </customer_segment>
        </fields>
    </banner_properties>
    <content>
        <class>\Enterprise\Banner\Test\Block\Adminhtml\Banner\Edit\Tab\Content</class>
        <selector>#banner_info_tabs_content_section</selector>
        <strategy>css selector</strategy>
        <fields>
            <store_contents_not_use>
                <selector>[name="store_contents_not_use[0]"]</selector>
                <input>checkbox</input>
            </store_contents_not_use>
            <store_content>
                <selector>[name="store_contents[0]"]</selector>
            </store_content>
            <store_view>
                <selector>[name="store_contents_not_use[%d]"]</selector>
                <input>checkbox</input>
            </store_view>
            <store_view_content>
                <selector>[name="store_contents[%d]"]</selector>
            </store_view_content>
        </fields>
    </content>
    <related_promotions>
        <class>\Enterprise\Banner\Test\Block\Adminhtml\Banner\Edit\Tab\RelatedPromotions</class>
        <selector>#banner_info_tabs_promotions_section</selector>
        <strategy>css selector</strategy>
    </related_promotions>
</tabs>
